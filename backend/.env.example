# ================================================
# FICHIER .env.example - SERTEC IoT Backend
# Template de configuration - À copier vers .env
# ================================================

# MPORTANT : Copie ce fichier vers .env et remplissez avec vos vraies valeurs
# cp .env.example .env

# Configuration Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Sécurité Flask
# IMPORTANT : Change cette clé en production !
SECRET_KEY=changez-moi-cle-secrete-forte-en-production

# Clé secrète pour JWT - IMPORTANT : Utiliser une clé forte en production
# Générez une clé forte avec : python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here

# ================================================
# CONFIGURATION TUYA IoT
# ================================================

# Identifiants API Tuya
# Disponibles sur le portail développeur Tuya (https://iot.tuya.com/)
# 1. Créez un compte développeur sur https://iot.tuya.com/
# 2. Créez un projet Cloud Development
# 3. Récupérez vos Access ID et Access Secret
ACCESS_ID=your_access_id_here
ACCESS_KEY=your_access_key_here

# Compte utilisateur Tuya (SmartLife/Tuya Smart app)
# Utilisez votre compte SmartLife/Tuya Smart existant
USERNAME=your_tuya_username@example.com
PASSWORD=your_tuya_password_here

# Configuration de l'endpoint Tuya
# L'URL peut varier selon votre région :
# - Europe : https://openapi.tuyaeu.com
# - Amérique : https://openapi.tuyaus.com
# - Asie : https://openapi.tuyacn.com
# - Inde : https://openapi.tuyain.com
TUYA_ENDPOINT=https://openapi.tuyaeu.com

# Paramètres par défaut pour l'authentification
# Code pays (ex: 33 pour France, 221 pour Sénégal, 1 pour USA)
COUNTRY_CODE=221
# Type d'application (Smartlife ou tuyaSmart)
TUYA_APP_TYPE=Smartlife

# ID d'appareil de test (optionnel)
# Utilisé pour les tests de développement
DEVICE_ID=your_test_device_id_here

# ================================================
# BASE DE DONNÉES
# ================================================

# Configuration MySQL
# Format : mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Détails de connexion MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=sertec_iot

# ================================================
# CORS ET FRONTEND
# ================================================

# URLs autorisées pour CORS (séparez par des virgules)
# Ajoutez l'URL de votre application React
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================================
# LOGS ET MONITORING
# ================================================

# Niveau de logs (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Fichier de logs
LOG_FILE=logs/sertec_iot.log

# ================================================
# EMAIL ET NOTIFICATIONS (OPTIONNEL)
# ================================================

# Configuration SMTP pour les alertes par email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password

# Configuration SMS (optionnel)
SMS_API_KEY=your_sms_api_key
SMS_SENDER=SERTEC

# ================================================
# SÉCURITÉ ET PERFORMANCE
# ================================================

# Durée de validité des tokens JWT (en secondes)
JWT_ACCESS_TOKEN_EXPIRES=1200

# Limitation de taux (rate limiting)
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# Mode maintenance
MAINTENANCE_MODE=False

# ================================================
# INSTRUCTIONS DE CONFIGURATION
# ================================================

# 1. CONFIGURATION TUYA :
#    - Créez un compte sur https://iot.tuya.com/
#    - Créez un projet "Cloud Development"
#    - Notez votre Access ID et Access Secret
#    - Activez les APIs : "IoT Core", "Smart Home Basic Service"
#    - Configurez votre compte SmartLife avec vos appareils

# 2. CONFIGURATION MYSQL :
#    - Installez MySQL/MariaDB
#    - Créez une base de données : CREATE DATABASE sertec_iot;
#    - Créez un utilisateur dédié (recommandé en production)

# 3. SÉCURITÉ :
#    - Changez TOUTES les clés secrètes en production
#    - Utilisez des mots de passe forts
#    - Activez HTTPS en production
#    - Configurez un firewall

# 4. DÉPLOIEMENT :
#    - Ne committez JAMAIS le fichier .env sur Git
#    - Utilisez des variables d'environnement en production
#    - Configurez des sauvegardes de base de données

